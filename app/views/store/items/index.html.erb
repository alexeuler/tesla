<div class="store-items-container">
  <p><%= link_to 'Новый', new_store_item_path if admin?%></p>
  <% @store_items.each do |store_item| %>
    <div class="store-item-container">
      <p class="store-item-header">
	<%= link_to store_item.name, store_item%>
      </p>
      <p><%=link_to image_tag("items/#{store_item.route}/thumb.png"), store_item%></p>
      
      <% if admin? %>
	<p>
        <%= link_to 'Правка', edit_store_item_path(store_item)%> |
        <%= link_to 'Удалить', store_item, method: :delete, data: { confirm: 'Are you sure?' }%></p>
      <% end %>
    </div>
  <% end %>
</div>




